# Copy this file to .env and fill in your values
# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-openai-api-key

# Shopify Webhook Secret (from Shopify app settings)
SHOPIFY_WEBHOOK_SECRET=your-webhook-signing-secret

# Gelato API Key
GELATO_API_KEY=your-gelato-api-key

# Gelato Product UID (photobook product SKU)
GELATO_PRODUCT_UID=photobook_hc_8x11_24

# Render External URL (your deployed service URL)
RENDER_EXTERNAL_URL=https://your-service.onrender.com

# Book templates directory
BOOKS_BASE_DIR=/data/books

# Output directory for generated PDFs
OUTPUT_DIR=/data/output

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

